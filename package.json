{
  "name": "color-of-berlin-palette",
  "displayName": "color-of-berlin-palette",
  "version": "0.0.1",
  "description": "Fetch colors of the sky in Berlin and create a color palette.",
  "author": "Alena Khineika <alena.khineika@gmail.com>",
  "license": "ISC",
  "scripts": {
    "clean": "rimraf ./dist/*",
    "build-server": "webpack --config webpack.config.server.js",
    "build-client": "webpack --config webpack.config.client.js",
    "build": "npm run clean && npm run build-client && npm run build-server",
    "start": "node dist/server.js",
    "lint": "eslint '**/*.{js,ts}'",
    "check": "npm run lint",
    "prettier-format": "run-script-os",
    "prettier-format:win32": "prettier --config .prettierrc \"./src/**/*.{ts,tsx}\" --write",
    "prettier-format:darwin:linux": "prettier --config .prettierrc 'src/**/*.{ts,tsx}' --write",
    "prettier-format:default": "prettier --config .prettierrc 'src/**/*.{ts,tsx}' --write",
    "test": "cross-env TS_NODE_PROJECT=\"tsconfig.json\" mocha -r ts-node/register tests/**/*.spec.ts --require ignore-styles"
  },
  "precommit": [
    "check"
  ],
  "dependencies": {
    "body-parser": "^1.20.2",
    "bson": "^5.3.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "d3": "^6.7.0",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "fs-extra": "^11.1.1",
    "http-status": "^1.6.2",
    "mongodb": "^5.6.0",
    "ora": "^6.3.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "twitter": "^1.7.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/fs-extra": "^11.0.1",
    "@types/mocha": "^10.0.1",
    "@types/mongodb": "^4.0.6",
    "@types/node": "^20.3.1",
    "@types/react": "^18.2.12",
    "@types/react-dom": "^18.2.5",
    "@types/twitter": "^1.7.1",
    "@typescript-eslint/eslint-plugin": "^5.59.11",
    "@typescript-eslint/parser": "^5.59.11",
    "chai": "^4.3.7",
    "cross-env": "^7.0.3",
    "css-loader": "^6.8.1",
    "dotenv-webpack": "^8.0.1",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ignore-styles": "^5.0.1",
    "less": "^4.1.3",
    "less-loader": "^11.1.3",
    "mini-css-extract-plugin": "^2.7.6",
    "mocha": "^10.2.0",
    "prettier": "^2.8.8",
    "run-script-os": "^1.1.6",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "webpack": "^5.87.0",
    "webpack-cli": "^5.1.4",
    "webpack-node-externals": "^3.0.0"
  }
}
