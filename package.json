{
  "name": "color-of-berlin-palette",
  "displayName": "color-of-berlin-palette",
  "version": "0.0.1",
  "description": "Fetch colors of the sky in Berlin and create a color palette.",
  "author": "Alena Khineika <alena.khineika@gmail.com>",
  "license": "ISC",
  "scripts": {
    "clean": "rimraf ./dist/*",
    "save-tweets-to-file": "npm run build && node dist/saveTweetsToFile.js",
    "save-tweets-to-mongodb": "npm run build && node dist/saveTweetsToMongodb.js",
    "build-server": "webpack --config webpack.config.server.js",
    "build-client": "webpack --config webpack.config.client.js",
    "build": "npm run clean && npm run build-client && npm run build-server",
    "start": "node dist/server.js",
    "lint": "eslint '**/*.{js,ts}'",
    "check": "npm run lint",
    "prettier-format": "run-script-os",
    "prettier-format:win32": "prettier --config .prettierrc \"./src/**/*.ts\" --write",
    "prettier-format:darwin:linux": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-format:default": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "precommit": [
    "check"
  ],
  "dependencies": {
    "body-parser": "^1.19.0",
    "bson": "^4.2.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "fs-extra": "^9.1.0",
    "mongodb": "^3.6.3",
    "ora": "^5.3.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "rimraf": "^3.0.2",
    "twitter": "^1.7.1"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/express": "^4.17.11",
    "@types/fs-extra": "^9.0.6",
    "@types/mongodb": "^3.6.3",
    "@types/node": "^14.14.22",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/twitter": "^1.7.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "css-loader": "^5.0.1",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-prettier": "^3.3.1",
    "less": "^4.1.0",
    "less-loader": "^7.3.0",
    "mini-css-extract-plugin": "^1.3.4",
    "prettier": "^2.2.1",
    "run-script-os": "^1.1.5",
    "ts-loader": "^6.0.1",
    "typescript": "^3.4.5",
    "webpack": "^4.31.0",
    "webpack-cli": "^3.3.2",
    "webpack-node-externals": "^1.7.2"
  }
}
